<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_meals"
        android:name="com.example.nutritiontrackerguiv4.ui.meals.MealsFragment"
        android:label="@string/title_meals"
        tools:layout="@layout/fragment_meals" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.nutritiontrackerguiv4.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <activity
        android:id="@+id/navigation_recipes"
        android:name="com.example.nutritiontrackerguiv4.RecipePage"
        android:label="@string/title_recipes"
        tools:layout="@layout/activity_recipe_page"
        />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.nutritiontrackerguiv4.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>